<view class="container">
  <view class="login-icon">
    <image class="login-img" src="../images/ic_launcher.png"></image>
  </view>
  <view class="login-from">

    <!--账号-->
    <view class="inputView">
      <image class="nameImage" src="../images/name.png"></image>
      <label class="loginLab">账号</label>
      <input class="inputText" placeholder="请输入邮箱" bindinput="phoneInput" />
    </view>
    <view class="line"></view>

    <!--按钮-->
    <view class="loginBtnView">
      <button class="loginBtn" type="primary" size="{{primarySize}}" loading="{{loading}}" plain="{{plain}}" disabled="{{disabled}}" bindtap="next" data-phone="{{phone}}">绑定邮箱</button>
    </view>
  </view>
</view>