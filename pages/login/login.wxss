page {
  width: 100%;
  height: 100%;
}

.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  padding: 0;
  box-sizing: border-box;
  background-color: #f2f2f2;
}

/*登录图片*/

.login-icon {
  flex: none;
}

.login-img {
  margin-top: 200rpx;
  width: 160rpx;
  height: 160rpx;
}

.login-box {
  flex-direction: column;
  justify-content: center;
  display: flex;
  align-items: center;
}

.login-wx {
  width: auto;
  height: auto;
  border-style: none;
  background: #f2f2f2;
}

.login-wx::after {
  border: 0;
}

.image-wx {
  width: 30px;
  height: 30px;
}

/*表单内容*/

.login-from {
  margin-top: 20px;
  /* margin: 20px; *//* flex: auto; */
  height: 100%;
  width: 90%;
}

.tips {
  font-size: 12px;
  color: rgb(156, 155, 155);
  text-align: center;
  margin: 20px;
}

.inputView {
  background-color: #fff;
  line-height: 52px;
  width: 100%;
}

/*输入框*/

.nameImage, .keyImage {
  margin-left: 22px;
  width: 14px;
  height: 14px;
}

.loginLab {
  margin: 15px 15px 15px 10px;
  color: #545454;
  font-size: 14px;
}

.inputText {
  flex: block;
  float: right;
  text-align: right;
  margin-right: 26rpx;
  margin-top: 12px;
  color: rgb(105, 104, 104);
  font-size: 16px;
}

.line {
  width: 100%;
  height: 1rpx;
  background-color: #f2f2f2;
  margin-top: 1rpx;
}

/*按钮*/

.loginBtnView {
  width: 100%;
  height: auto;
  background-color: #f2f2f2;
  margin-top: 0px;
  margin-bottom: 0px;
  padding-bottom: 0px;
}

.loginBtn {
  width: 80%;
  margin-top: 10px;
}

.register-box {
  display: flex;
  flex-flow: column;
  justify-content: right;
}

.register {
  text-align: right;
  padding: 10px;
  color: rgb(105, 104, 104);
  font-size: 15px;
  align-items: right;
}
